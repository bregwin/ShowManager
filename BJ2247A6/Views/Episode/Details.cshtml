@model BJ2247A5.Models.EpisodeWithShowNameViewModel

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.ShowName)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShowName)
        </dd>

        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.SeasonNumber)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeasonNumber)
        </dd>

        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.EpisodeNumber)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EpisodeNumber)
        </dd>

        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>

        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.AirDate)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AirDate)
        </dd>

        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>

        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" style="max-height: 100px; max-width: 100px;" />
        </dd>

        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.Clerk)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clerk)
        </dd>

        @if (!string.IsNullOrEmpty(Model.Premise))
        {
            <hr />

            <dt class="col-sm-2 text-end">
                @Html.DisplayNameFor(model => model.Premise)
            </dt>

            <dd class="col-sm-10">
                <div class="card card-body" style="background-color: #f1f1f1">
                    @Html.Raw(Model.Premise)
                </div>
            </dd>
        }

        @if (!string.IsNullOrEmpty(Model.VideoContentType))
        {

            <hr />

            <dt class="col-sm-2 text-end">
                @Html.DisplayNameFor(model => model.VideoUrl)
            </dt>

            <dd class="col-sm-10">
                <video controls>
                    <source src="@Url.Action("GetVideo", "Episode", new { id = Model.Id })" type="@Model.VideoContentType">
                </video>
            </dd>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
